<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_delete_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="50dp"
        android:text="Delete Existing Post"
        android:textSize="30sp"
        android:typeface="serif"
        android:textColor="@color/blue"
        android:fontFamily="cursive"
        android:textStyle="normal"
        />

   <EditText
       android:id="@+id/et_delete_using_id_delete_post"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/tv_delete_post"
       android:layout_marginTop="80dp"
       android:textColor="@color/green"
       android:background="@drawable/custom_send_edit_text"
       android:layout_marginStart="15dp"
       android:layout_marginEnd="15dp"
       android:maxEms="8"
       android:inputType="number"
       android:hint="Enter existing id to delet post"
       android:minEms="1"
       android:padding="15dp"/>

    <Button
        android:id="@+id/btn_delete_delete_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/custom_send_button"
        app:layout_constraintTop_toBottomOf="@id/et_delete_using_id_delete_post"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:text="Delete Post"
        android:textSize="20sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>














